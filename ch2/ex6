#include<iostream>
using namespace std;

void ToAstronomicalUnits(double LightYear);

int main(){
	double LightYear;
	cout<<"Enter the number of light years: ";
	cin>>LightYear;
	ToAstronomicalUnits(LightYear);
	return 0;
}

void ToAstronomicalUnits(double LightYear){
	double astronomical_units = LightYear*63240;
	cout<< LightYear << " light years = " << astronomical_units << " astronomical units.";
}
